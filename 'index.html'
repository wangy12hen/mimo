    <script>
        // åˆ›å»ºçº¢åŒ…é›¨æ•ˆæœ
        function createRedPacket() {
            const packet = document.createElement('div');
            packet.className = 'red-packet';
            packet.style.left = Math.random() * 90 + 'vw';
            packet.style.setProperty('--random-x', (Math.random() * 100 - 50) + 'px');
            
            // ç‚¹å‡»çº¢åŒ…è·å–ç¥ç¦
            packet.onclick = function() {
                const blessings = [
                    'ğŸ’° è´¢æºå¹¿è¿›ï¼',
                    'ğŸ¥ èº«ä½“å¥åº·ï¼',
                    'ğŸ“ å­¦ä¸šæœ‰æˆï¼',
                    'ğŸ’¼ äº‹ä¸šé¡ºåˆ©ï¼',
                    'ğŸ  å®¶åº­å¹¸ç¦ï¼',
                    'ğŸ€ å¥½è¿è¿è¿ï¼'
                ];
                const randomBlessing = blessings[Math.floor(Math.random() * blessings.length)];
                
                // æ˜¾ç¤ºç¥ç¦
                const toast = document.createElement('div');
                toast.textContent = randomBlessing;
                toast.style.cssText = `
                    position: fixed;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    background: linear-gradient(45deg, #ffd700, #ffb300);
                    color: #c62828;
                    padding: 15px 25px;
                    border-radius: 50px;
                    font-size: 1.5rem;
                    font-weight: bold;
                    z-index: 1000;
                    animation: pulse 0.5s ease-out;
                    box-shadow: 0 10px 30px rgba(0,0,0,0.3);
                `;
                document.body.appendChild(toast);
                
                // æŒ¯åŠ¨åé¦ˆ
                if (navigator.vibrate) navigator.vibrate(100);
                
                setTimeout(() => {
                    toast.remove();
                    packet.remove();
                }, 1500);
            };
            
            document.body.appendChild(packet);
            
            // 5ç§’åè‡ªåŠ¨ç§»é™¤
            setTimeout(() => {
                if (packet.parentNode) packet.remove();
            }, 5000);
        }
        
        // åˆ›å»ºçƒŸèŠ±ç²’å­
        function createFirework(x, y) {
            const colors = ['#ffd700', '#ff6f00', '#d32f2f', '#ffffff', '#4caf50'];
            const particleCount = 12;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'firework';
                particle.style.left = x + 'px';
                particle.style.top = y + 'px';
                particle.style.background = colors[Math.floor(Math.random() * colors.length)];
                
                const angle = (Math.PI * 2 * i) / particleCount;
                const velocity = 50 + Math.random() * 50;
                const tx = Math.cos(angle) * velocity;
                const ty = Math.sin(angle) * velocity;
                
                particle.style.setProperty('--tx', tx + 'px');
                particle.style.setProperty('--ty', ty + 'px');
                
                document.body.appendChild(particle);
                
                setTimeout(() => particle.remove(), 1000);
            }
        }
        
        // åº†ç¥å‡½æ•°
        function celebrate() {
            // åˆ›å»ºå¤šä¸ªçº¢åŒ…
            for (let i = 0; i < 5; i++) {
                setTimeout(createRedPacket, i * 200);
            }
            
            // åœ¨ç‚¹å‡»ä½ç½®åˆ›å»ºçƒŸèŠ±
            const btn = event.target;
            const rect = btn.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;
            
            for (let i = 0; i < 3; i++) {
                setTimeout(() => {
                    createFirework(centerX + (Math.random() * 40 - 20), centerY + (Math.random() * 40 - 20));
                }, i * 100);
            }
            
            // æ˜¾ç¤ºåˆ†äº«æç¤º
            const shareTip = document.getElementById('shareTip');
            shareTip.style.display = 'block';
            shareTip.textContent = 'ğŸ‰ æ–°æ˜¥å¤§å‰ï¼å¿«åˆ†äº«ç»™æ·±åœ³çš„æœ‹å‹ä»¬å§ï¼';
            
            // æŒ‰é’®åé¦ˆ
            const btn = document.querySelector('.btn');
            const originalText = btn.textContent;
            btn.textContent = 'ğŸ§§ å·²æ¥ç¦ï¼';
            btn.style.background = '#4caf50';
            
            setTimeout(() => {
                btn.textContent = originalText;
                btn.style.background = 'linear-gradient(45deg, #e53935, #c62828)';
            }, 2000);
        }
        
        // åˆ†äº«æç¤ºå‡½æ•°
        function shareToFriend() {
            const shareTip = document.getElementById('shareTip');
            shareTip.style.display = 'block';
            shareTip.innerHTML = 'ğŸ’¡ å¾®ä¿¡æ“ä½œæŒ‡å—ï¼š<br>1. ç‚¹å‡»å³ä¸Šè§’"..."<br>2. é€‰æ‹©"å‘é€ç»™æœ‹å‹"<br>3. åˆ†äº«ç»™æ›´å¤šæ·±åœ³ä¼™ä¼´';
            
            // æŒ¯åŠ¨åé¦ˆ
            if (navigator.vibrate) navigator.vibrate(50);
            
            // åˆ›å»ºçƒŸèŠ±åº†ç¥
            for (let i = 0; i < 5; i++) {
                setTimeout(() => {
                    createFirework(
                        Math.random() * window.innerWidth,
                        Math.random() * window.innerHeight
                    );
                }, i * 150);
            }
            
            setTimeout(() => {
                shareTip.innerHTML = 'ğŸ§§ ç¥æ‚¨å’Œå®¶äººåœ¨æ·±åœ³æ–°æ˜¥å¿«ä¹ï¼Œé˜–å®¶å¹¸ç¦ï¼';
            }, 3000);
        }
        
        // é¡µé¢åŠ è½½æ—¶è‡ªåŠ¨åˆ›å»ºä¸€äº›çº¢åŒ…
        window.addEventListener('load', () => {
            setTimeout(() => {
                for (let i = 0; i < 3; i++) {
                    setTimeout(createRedPacket, i * 300);
                }
            }, 800);
            
            // æ£€æµ‹æ˜¯å¦åœ¨å¾®ä¿¡ä¸­
            if (/MicroMessenger/i.test(navigator.userAgent)) {
                console.log('âœ¨ å¾®ä¿¡ç¯å¢ƒå·²æ£€æµ‹ï¼Œä½“éªŒæ›´ä½³ï¼');
            }
        });
        
        // æ·»åŠ è§¦æ‘¸åé¦ˆ
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('touchstart', function() {
                this.style.transform = 'scale(0.95)';
            });
            btn.addEventListener('touchend', function() {
                this.style.transform = 'scale(1)';
            });
        });
        
        // ç‚¹å‡»èƒŒæ™¯åˆ›å»ºçƒŸèŠ±
        document.body.addEventListener('click', function(e) {
            if (e.target.classList.contains('btn') || e.target.closest('.btn')) return;
            createFirework(e.clientX, e.clientY);
        });
